<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="SisVac.Pages.CheckIn.Views.Shared.PersonDetailView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <Frame>
            <Grid ColumnDefinitions="*,3*" RowDefinitions="16">

                <Grid.Resources>
                    <ResourceDictionary>
                        <Style BasedOn="{StaticResource Body2}" TargetType="Label" />
                    </ResourceDictionary>
                </Grid.Resources>

                <Image Grid.RowSpan="4" Source="logo" />
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    Text="{Binding Patient.FullName}" />
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="{Binding DocumentLabel}" />
                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="{Binding Patient.Age, StringFormat='Edad: {0} años'}" />
                <Label
                    Grid.Row="3"
                    Grid.Column="1"
                    Text="HABILITAD@ PARA VACUNA"
                    TextColor="#2BB042" />
            </Grid>
        </Frame>
    </ContentView.Content>
</ContentView>