                            Text="Fecha: --" />
                        <Label
                            Grid.Row="3"
                            Grid.Column="1"
                            Text="Hora: --" />
                        <Label
                            Grid.Row="4"
                            Grid.Column="1"
                            Text="Vacunador: --" />
                        <Label
                            Grid.Row="5"
                            Grid.Column="1"
                            Text="Centro: --" />

                    </Grid>
                </Frame>

                <Frame>
                    <Grid ColumnDefinitions="*,*" RowDefinitions="16">



                        <Frame
                            Grid.RowSpan="6"
                            Margin="8"
                            BorderColor="{StaticResource PrimaryColor}"
                            CornerRadius="12">
