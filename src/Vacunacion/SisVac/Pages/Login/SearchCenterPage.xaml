<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SisVac.Pages.Login.SearchCenterPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrls="clr-namespace:SisVac.Controls"
    xmlns:hlps="clr-namespace:SisVac.Helpers;assembly=SisVac"
    xmlns:mtrl="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
    xmlns:prism="http://prismlibrary.com"
    Title="Buscar centro"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="{StaticResource BackgroundColor}">

    <Grid
        HorizontalOptions="FillAndExpand"
        RowDefinitions="*,Auto"
        VerticalOptions="FillAndExpand">

        <StackLayout Spacing="16">
            <Frame Padding="16,24,16,0">
                <ctrls:TextFieldLayout>
                    <mtrl:MaterialTextField
                        HelperText="¿Cuál es el nombre de tu centro?"
                        Placeholder="Centro"
                        ReturnCommand="{Binding LoginCommand}"
                        StyleClass="CedulaTextField" />
                </ctrls:TextFieldLayout>
            </Frame>


            <Frame>
                <StackLayout>
                    <Label Style="{StaticResource H3}" Text="Selecciona tu centro" />
                    <mtrl:MaterialRadioButtonGroup x:Name="radioButtonGroup">
                        <mtrl:MaterialRadioButtonGroup.Choices>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Centro 1</x:String>
                                <x:String>Centro 2</x:String>
                            </x:Array>
                        </mtrl:MaterialRadioButtonGroup.Choices>
                    </mtrl:MaterialRadioButtonGroup>
                </StackLayout>
            </Frame>
        </StackLayout>


        <Frame
            Grid.Row="1"
            Padding="16,8,16,8"
            VerticalOptions="End">
            <mtrl:MaterialButton
                Command="{Binding SelectCommand}"
                Style="{StaticResource ButtonPrimary}"
                Text="Seleccionar" />
        </Frame>



    </Grid>

</ContentPage>