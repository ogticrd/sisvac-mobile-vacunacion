<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Vacunacion.Pages.Login.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrls="clr-namespace:Vacunacion.Controls"
    xmlns:hlps="clr-namespace:Vacunacion.Helpers;assembly=Vacunacion"
    xmlns:mtrl="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
    xmlns:prism="http://prismlibrary.com"
    BackgroundColor="{StaticResource Material.Color.Background}"
    NavigationPage.HasNavigationBar="False">

    <StackLayout
        Padding="16"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">

        <Image
            HeightRequest="38"
            HorizontalOptions="End"
            Source="{hlps:ImageResource logo_cupula.png}"
            WidthRequest="38" />

        <StackLayout Spacing="16" VerticalOptions="CenterAndExpand">

            <Image
                HeightRequest="132"
                Source="{hlps:ImageResource logo.png}"
                WidthRequest="132" />

            <Label
                Margin="0,0,0,32"
                FontSize="{StaticResource Material.FontSize.Body1}"
                HorizontalOptions="Center"
                Text="Inicia sesión para comenzar tu dia"
                TextColor="{StaticResource PrimaryColor}" />

            <ctrls:TextFieldLayout>
                <mtrl:MaterialTextField
                    ErrorText="Error Text"
                    HelperText="Helper Text"
                    MaxLength="14"
                    Placeholder="Número de Cédula"
                    Text="{Binding DocumentNumber}" />
            </ctrls:TextFieldLayout>

            <mtrl:MaterialButton
                Command="{Binding ScanDocumentCommand}"
                Style="{StaticResource ButtonOutlined}"
                Text="Escanear Cédula" />

            <mtrl:MaterialButton
                Command="{prism:NavigateTo 'ConfirmSignIn'}"
                Style="{StaticResource ButtonPrimary}"
                Text="Iniciar Sesión" />


        </StackLayout>

    </StackLayout>

</ContentPage>